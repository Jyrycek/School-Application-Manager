<UserControl x:Class="EvidencePrihlasek.View.AboutApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EvidencePrihlasek.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" Height="345">
            <TextBlock Text="O APLIKACI" 
                       FontSize="36" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20" Height="47"/>
            <TextBlock 
                       FontSize="16"
                       FontWeight="Bold" HorizontalAlignment="Center"
                       ><Run Text="Autor: Jiří Gengela"/></TextBlock>

            <TextBlock 
                       FontSize="20" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" Margin="0,22,0,30">
                <Run Text="Tato aplikace slouží k evidenci přihlášek na střední školy. "/>
                <LineBreak/>
                <Run Text="Jejím účelem je usnadnit správu a sledování přihlášek "/>
                <Run Text="a nabízených studijních programů."/>
                <LineBreak/>
                <Run/>
                <LineBreak/>
                <Run Text="V případě dotazů nebo problémů neváhejte kontaktovat autora aplikace"/>
            </TextBlock>
        </StackPanel>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,409,0,0" FontSize="16">
            <Hyperlink NavigateUri="" TargetName="_blank">
                    <Run Text="Github"/>
                </Hyperlink>
                <Run Text=" | "/>
                <Hyperlink NavigateUri="" TargetName="_blank">
                    <Run Text="Facebook"/>
                </Hyperlink>
                <Run Text=" | "/>
                <Hyperlink NavigateUri="" TargetName="_blank">
                    <Run Text="LinkedIn"/>
                </Hyperlink>
                <Run Text=" | "/>
                <Hyperlink NavigateUri="" TargetName="_blank">
                    <Run Text="Instagram"/>
                </Hyperlink>
                <Run Text=" | "/>
                <Hyperlink NavigateUri="" TargetName="_blank">
                    <Run Text="Twitter"/>
                </Hyperlink>
        </TextBlock>
    </Grid>
</UserControl>
