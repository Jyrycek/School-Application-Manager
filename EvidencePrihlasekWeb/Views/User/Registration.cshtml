@model Users
@{
    ViewData["Title"] = "Registrace";
}

<h1 class="text-center py-4">Registrace</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Uživatelské jméno</label>
                            <input asp-for="Username" type="text" class="form-control" placeholder="Uživatelské jméno">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="example@email.cz">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PasswordHash" class="form-label">Heslo</label>
                            <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Heslo">
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password2" class="form-label">Potvrzení hesla</label>
                            <input asp-for="Password2" type="password" class="form-control" placeholder="Potvrzení hesla">
                            <span asp-validation-for="Password2" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-secondary btn-edit-custom no text-nowrap">Registrovat se</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
