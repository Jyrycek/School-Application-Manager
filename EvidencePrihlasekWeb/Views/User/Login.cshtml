@model LoginModel
@{
    ViewData["Title"] = "Přihlášení";
}

<h1 class="text-center py-4">Přihlášky</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Přihlášení</h5>
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Uživatelské jméno</label>
                            <input asp-for="Username" type="text" class="form-control" placeholder="Uživatelské jméno">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Heslo</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Heslo">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-secondary btn-edit-custom w-25">Přihlásit se</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-controller="User" asp-action="Registration" class="btn btn-secondary btn-edit-custom text-nowrap w-25">Zaregistrovat se</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
